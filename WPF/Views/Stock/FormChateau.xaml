<UserControl x:Class="WPF.Views.Stock.FormChateau"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:WPF.Views.Stock"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid Margin="10" Background="white">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="Auto" />
            <ColumnDefinition Width="*" />
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>
        <Label>Nom:</Label>
        <TextBox x:Name="nom" Grid.Column="1" Margin="0,0,0,10" />
        <StackPanel Grid.Row="2" Orientation="Horizontal">
            <Button Name="cancel" Margin="10" Grid.Column="2" Content="Cancel" Width="100" HorizontalAlignment="Left" />
            <Button Name="ajouter" Margin="10" Click="ajouter_Click" Grid.Row="2" Grid.Column="1" Content="Save" Width="100" HorizontalAlignment="Right" />
        </StackPanel>

    </Grid>
</UserControl>
