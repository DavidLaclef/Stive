<UserControl x:Class="WPF.Views.Stock.FormPutChateau"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:WPF.Views.Stock"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid>
        <Grid Margin="10" Background="white">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto" />
                <ColumnDefinition Width="*" />
            </Grid.ColumnDefinitions>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto" />
                <RowDefinition Height="*" />
            </Grid.RowDefinitions>
            <Label>Nom:</Label>
            <TextBox Text="{Binding ChateauSelected.Nom}" Grid.Column="1" Margin="0,0,0,10" />
            <StackPanel Grid.Row="2" Orientation="Horizontal">
                <Button  Margin="10"  Grid.Row="2" Grid.Column="1" Content="Modifier" Width="100" HorizontalAlignment="Right" />
                <Button  Margin="10"  Grid.Row="2" Grid.Column="1" Content="Annuler" Width="100" HorizontalAlignment="Right" />



            </StackPanel>

        </Grid>
    </Grid>
</UserControl>
